@{
    ViewData["Title"] = "Pole Management";
}
<link href="~/css/openlayers/ol.css" rel="stylesheet" />
<link href="~/css/openlayers/ol-layerswitcher.css" rel="stylesheet" />
<link href="~/css/openlayers/ol-customs.css" rel="stylesheet" />

<div class="app-page-title">
    <div class="page-title-wrapper">
        <div class="page-title-heading">
            <div class="page-title-subheading opacity-10">
                <nav class="" aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a>
                                <i aria-hidden="true" class="fa fa-home"></i>
                            </a>
                        </li>
                        <li class="active breadcrumb-item" aria-current="page">
                            Pole Management
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="main-card card">
            <div class="card-body" @*style="height: 375px;"*@>
                @*<div class="card-title">World Map</div>*@
                <div id="map" class="map"></div>
                <div id="popup" class="ol-popup">
                    <div id="popup-content"></div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/lib/openlayers/ol.js"></script>
    <script src="~/lib/openlayers/ol-layerswitcher.js"></script>
    <script src="~/js/e-poles.js" ></script>
    <script>
        var _form = new EPoles();
        $(document).ready(function () {
            _form.getUrl = '@Url.Action("GetAllPoles")';
            _form.init();
        });
    </script>
}
